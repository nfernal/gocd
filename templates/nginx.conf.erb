#
# The default server
#

events {  }

http {

  map $http_upgrade $connection_upgrade {
      default upgrade;
      ''      close;
    }

server {
    listen 80;
    server_name <%= node['set_fqdn'] %>;
    location / {
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   Host      $http_host;
        proxy_pass         http://127.0.0.1:8153;
    }
  }
}
